<!DOCTYPE html>
<html>

<head>
    <title>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

</head>

<body>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h1>Mailer In Node.JS</h1>
            <input id="to" type="text" placeholder="Enter E-mail ID where you want to send" / class="form-control"><br/>
            <input id="subject" type="text" placeholder="Write Subject" / class="form-control"><br/>
            <textarea id="content" cols="40" rows="5" placeholder="Write what you want to send" class="form-control"></textarea><br/>
            <button id="send_email" class="btn btn-primary">Send Email</button>
            <span id="message"></span>
        </div>

        <div class="col-md-4"></div>
    </div>

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


    <script>
        $(document).ready(function() {
            var from, to, subject, text;
            $("#send_email").click(function() {
                to = $("#to").val();
                subject = $("#subject").val();
                text = $("#content").val();
                $("#message").text("Sending E-mail...Please wait");
                $.get("http://localhost:4001/send", {
                    to: to,
                    subject: subject,
                    text: text
                }, function(data) {
                    if (data == "sent") {
                        $("#message").empty().html("Email is been sent at " + to + ".Please check inbox!");
                    }

                });
            });
        });
    </script>

</body>

</html>